<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <!--Cambiando este parametro usamos la pantalla de exito cutre en vez de la menos cutre-->
    <!---->
    <context-param>
        <param-name>successForm</param-name>
        <param-value>/WEB-INF/view/successpage.jsp</param-value>
    </context-param>
    <!---->
    <context-param>
        <param-name>errorForm</param-name>
        <param-value>/WEB-INF/view/error.html</param-value>
    </context-param>
    <context-param>
        <param-name>saleForm</param-name>
        <param-value>/webactionsuser/saleform.jsp</param-value>
    </context-param>
    <context-param>
        <param-name>confirmationSale</param-name>
        <param-value>/WEB-INF/view/confirmationsale.jsp</param-value>
    </context-param>
    <context-param>
        <param-name>mainForm</param-name>
        <param-value>/index.jsp</param-value>
    </context-param>
    <context-param>
        <param-name>createServlet</param-name>
        <param-value>createServlet</param-value>
    </context-param>
    <context-param>
        <param-name>addToShoppingCartServlet</param-name>
        <param-value>AddToShoppingCartServlet</param-value>
    </context-param>
    <context-param>
        <param-name>saleServlet</param-name>
        <param-value>SaleServlet</param-value>
    </context-param>
    <context-param>
        <param-name>sendEmailServlet</param-name>
        <param-value>SendEmailServlet</param-value>
    </context-param>
    <context-param>
        <param-name>authenticationServlet</param-name>
        <param-value>AuthenticacionServlet</param-value>
    </context-param>
    <context-param>
        <param-name>readServlet</param-name>
        <param-value>ReadServlet</param-value>
    </context-param>
    <context-param>
        <param-name>deleteServlet</param-name>
        <param-value>DeleteServlet</param-value>
    </context-param>
    <context-param>
        <param-name>updateServlet</param-name>
        <param-value>UpdateServlet</param-value>
    </context-param>
    <context-param>
        <param-name>displayForm</param-name>
        <param-value>/WEB-INF/view/displayForm.jsp</param-value>
    </context-param>
    <context-param>
        <param-name>mechanismOfPersistence</param-name>
        <param-value>file</param-value>
    </context-param>
    <!--Comienzo de la configuracin de la configuracion de la base de datos jdbc:derby://localhost:1527/TiendaOnline-->
    <context-param>
        <param-name>databaseURL</param-name>
        <param-value>TiendaOnline</param-value>
    </context-param>
    <context-param>
        <param-name>databaseDriver</param-name>
        <param-value>org.apache.derby.jdbc.ClientDriver</param-value>
    </context-param>
    <context-param>
        <param-name>databasePassword</param-name>
        <param-value>electronixstorelpi</param-value>
    </context-param>
    <context-param>
        <param-name>databaseUser</param-name>
        <param-value>electronixstoreadmin</param-value>
    </context-param>
    <!--Listener de inicializacion-->
    <listener>
        <description>ServletContextListener</description>
        <listener-class>webactions/StartUpServlet</listener-class>
    </listener>
    <!--Listener de sesion -->
    <listener>
        <listener-class>webactions/SessionListenerServlet</listener-class>
    </listener>
    <error-page>
        <error-code>404</error-code>
        <!--En este caso, el recurso va a ser una página HTML estatica-->
        <location>/WEB-INF/view/errors/error404.html</location>
    </error-page>
    <!--Declaramos el recurso que va a gestionar errores http 500-->
    <error-page>
        <error-code>500</error-code>
        <!--En este caso, el recurso va a ser una página HTML estatica-->
        <location>/WEB-INF/view/errors/error500.html</location>
    </error-page>
    <error-page>
        <error-code>501</error-code>
        <!--En este caso, el recurso va a ser una página HTML estatica-->
        <location>/WEB-INF/view/errors/error501.html</location>
    </error-page>
    <!--Declaramos el recurso que va a gestionar NullPointerExceptions en el codigo Java-->
    <error-page>
        <exception-type>java.lang.NullPointerException</exception-type>
        <!--En este caso, el recurso va a ser Servlet-->
        <location>/WEB-INF/view/errors/null.html</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <!--En este caso, el recurso va a ser Servlet-->
        <location>/WEB-INF/view/errors/error.html</location>
    </error-page>
    <servlet>
        <servlet-name>createServlet</servlet-name>
        <servlet-class>webactions/crud/CrearServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>saleServlet</servlet-name>
        <servlet-class>webactions/otheractions/SaleServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>readServlet</servlet-name>
        <servlet-class>webactions/crud/ReadServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deleteServlet</servlet-name>
        <servlet-class>webactions/crud/DeleteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>frontServlet</servlet-name>
        <servlet-class>webactions/FrontServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>abstractServlet</servlet-name>
        <servlet-class>webactions/AbstractServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>startUpServlet</servlet-name>
        <servlet-class>webactions/StartUpServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>updateServlet</servlet-name>
        <servlet-class>webactions/crud/UpdateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sendEmailServlet</servlet-name>
        <servlet-class>webactions/otheractions/SendEmailServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addToShoppingCartServlet</servlet-name>
        <servlet-class>webactions/otheractions/AddToShoppingCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>authenticationServlet</servlet-name>
        <servlet-class>webactions/otheractions/AuthenticationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createServlet</servlet-name>
        <url-pattern>/CreateServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>readServlet</servlet-name>
        <url-pattern>/ReadServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deleteServlet</servlet-name>
        <url-pattern>/DeleteServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>frontServlet</servlet-name>
        <url-pattern>/FrontServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>abstractServlet</servlet-name>
        <url-pattern>/AbstractServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>startUpServlet</servlet-name>
        <url-pattern>/StartUpServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updateServlet</servlet-name>
        <url-pattern>/UpdateServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>saleServlet</servlet-name>
        <url-pattern>/otheractions/SaleServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sendEmailServlet</servlet-name>
        <url-pattern>/otheractions/SendEmailServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addToShoppingCartServlet</servlet-name>
        <url-pattern>/otheractions/AddToShoppingCartServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>authenticationServlet</servlet-name>
        <url-pattern>/otheractions/AuthenticationServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
